<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Esta vista esta hereda de la vista "portal.portal_templates.xml" el primer div,
    el documento se encuentra en portal/views/portal_templates.xml -->
    <template id="portal_pqr_inherit" inherit_id="portal.portal_my_home" customize_show="True"
        active="True">
        <xpath expr="//div[@class='o_portal_docs list-group']" position="inside">
                <a href="/my/pqrs"
                    class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                    PQRS <span class="badge text-bg-secondary rounded-pill"
                        data-placeholder_count="pqrCount">
                        <i class="fa fa-spin fa-circle-o-notch"></i>
                    </span>
                </a>
        </xpath>
    </template>
</odoo>